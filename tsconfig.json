{
  "compilerOptions": {
    "importHelpers": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module":"es2015",
    "lib": ["es6", "dom", "ES2015", "es2016", "es2017"],
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
